{
  "extends": "@tsconfig/node18/tsconfig.json",
  "include": ["src/**/*", ".eslintrc.cjs"],
  "compilerOptions": {
    "jsx": "react",
    "jsxFactory": "LLMx.createElement",
    "jsxFragmentFactory": "LLMx.Fragment",
    "moduleResolution": "node16",
    "resolveJsonModule": true,
    "allowImportingTsExtensions": true,
    "noEmit": true
  }
}
